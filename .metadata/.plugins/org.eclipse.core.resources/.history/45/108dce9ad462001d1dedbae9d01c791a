package me.ix.noskillv2;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class ConfigManager {

	String path = "config.cfg";
	File config_file;

	public ConfigManager() {
		File config_file = new File(path);

		if (!config_file.exists()) {
			Utils.log("Could not find config.cfg file. Generating new file.");

			try {
				config_file.createNewFile();
				String configText = "[TOKEN]: 12345\n[STATUS]: Status one, Status two, Status three";

				FileWriter fw = new FileWriter(path);
				fw.write("Files in Java might be tricky, but it is fun enough!");
				fw.close();

			} catch (IOException e) {
				Utils.log("ERROR: Could not generate config.cfg file.");
				System.exit(0);
			}
		}
	}

}
