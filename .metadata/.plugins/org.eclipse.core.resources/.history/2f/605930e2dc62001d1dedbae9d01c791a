package me.ix.noskillv2;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class ConfigManager {

	String path = "config.cfg";
	File config_file;

	public ConfigManager() {
		File config_file = new File(path);

		if (!config_file.exists()) {
			Utils.log("Could not find config.cfg file. Generating new file.");

			try {
				config_file.createNewFile();
				String configText = "[TOKEN]:12345\n[STATUS]:Status one,Status two,Status three";

				FileWriter fw = new FileWriter(path);
				fw.write(configText);
				fw.close();

			} catch (IOException e) {
				Utils.log("ERROR: Could not generate config.cfg file.");
				System.exit(0);
			}
		}
	}

	public String getValueFromConfig(String key) {
		try {
			Scanner reader = new Scanner(config_file);
			while (reader.hasNextLine()) {
				String line = reader.nextLine();
				if(line.contains(":")) {
					String[] lineArr = line.split(":");
					
					if(lineArr[0] == ("[" + key + "]")){
						return lineArr[1];
					}
				}
			}
		} catch (FileNotFoundException e) {
			Utils.log("ERROR: Config file not found.");
		}
		return null;
	}

}
